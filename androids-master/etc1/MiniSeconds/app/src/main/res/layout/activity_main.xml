<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="seveno.android.miniseconds.MainActivity"
    android:background="@drawable/main_bg"
    >
    
    <TextView
        android:id="@+id/title_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타이머게임"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"
        />
    
    <Button
        android:id="@+id/btn_game_start"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="게임시작"
        app:layout_constraintLeft_toLeftOf="@+id/title_txt1"
        app:layout_constraintTop_toBottomOf="@+id/title_txt1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/title_txt1"/>
    
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="로그아웃"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@+id/title_txt1"
        app:layout_constraintTop_toBottomOf="@+id/title_txt1"/>
    
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/txt_google2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_plus_signin_btn_icon_light_disabled"/>
    
    <TextView
        android:id="@+id/txt_google1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/txt_google2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/txt_google1"
        app:layout_constraintTop_toBottomOf="@+id/txt_google1"/>
    
    <TextView
        android:id="@+id/txt_google3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/txt_google2"
        app:layout_constraintTop_toBottomOf="@+id/txt_google2"/>
    
    <TextView
        android:id="@+id/txt_google4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/txt_google3"
        app:layout_constraintTop_toBottomOf="@+id/txt_google3"/>
    
    <TextView
        android:id="@+id/txt_google5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/txt_google4"
        app:layout_constraintTop_toBottomOf="@+id/txt_google4"/>
    
    <TextView
        android:id="@+id/txt_google6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/txt_google5"
        app:layout_constraintTop_toBottomOf="@+id/txt_google5"/>


</android.support.constraint.ConstraintLayout>
