<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="seveno.android.miniseconds.GameEnding"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/text_end_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/textview_finished"
        android:textSize="@dimen/text_size_title"
        android:layout_weight="1"
        android:textStyle="bold"
        android:typeface="serif"/>
    
    <TextView
        android:id="@+id/text_end_playtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:layout_weight="1"
        android:typeface="serif"/>
    <TextView
        android:id="@+id/text_end_Score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:text="Score : "
        android:layout_weight="1"
        android:typeface="serif"/>
    
    <Button
        android:id="@+id/btn_end_Return"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Exit"
        android:textSize="@dimen/text_size"
        android:typeface="serif"/>
    <Button
        android:id="@+id/btn_end_List"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Ranking"
        android:textSize="@dimen/text_size"
        android:typeface="serif"/>
    
</LinearLayout>
