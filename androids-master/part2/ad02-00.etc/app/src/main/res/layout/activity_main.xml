<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.etc.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <EditText
        android:id="@+id/edit1"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="숫자1 입력" />
    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edit2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="숫자2 입력" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt0"
            android:text="0"
            android:layout_width="77dp" />

        <Button
            android:id="@+id/bt1"
            android:text="1"
            android:layout_width="77dp"/>

        <Button
            android:id="@+id/bt2"
            android:text="2"
            android:layout_width="77dp"/>

        <Button
            android:id="@+id/bt3"
            android:text="3"
            android:layout_width="77dp"/>

        <Button
            android:id="@+id/bt4"
            android:text="4"
            android:layout_width="77dp"/>
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt5"
            android:text="5"
            android:layout_width="77dp"/>

        <Button
            android:id="@+id/bt6"
            android:text="6"
            android:layout_width="77dp"/>

        <Button
            android:id="@+id/bt7"
            android:text="7"
            android:layout_width="77dp"/>

        <Button
            android:id="@+id/bt8"
            android:text="8"
            android:layout_width="77dp"/>

        <Button
            android:id="@+id/bt9"
            android:text="9"
            android:layout_width="77dp"/>
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnA"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:background="@android:color/darker_gray"
            android:text="더하기 " />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnS"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:background="@android:color/holo_blue_bright"
            android:text="빼기 " />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnM"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:background="@android:color/holo_green_light"
            android:text="곱하기 " />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnD"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:background="@android:color/holo_orange_dark"
            android:text="나누기 " />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground">

        <TextView
            android:id="@+id/text1"
            android:layout_margin="5dp"
            android:text="계산 결과 : "
            android:textSize="20dp" />
    </GridLayout>

</LinearLayout>
