<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cafe.adminapp.userinfo.Userinfo"
    android:weightSum="1">
    
    
    <LinearLayout
        android:background="@color/colorMINT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/caferoain"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
    
        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">
    
            <ImageView
                android:id="@+id/iv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/loginpic"/>
        </android.support.constraint.ConstraintLayout>
    
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    
            <TextView
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:id="@+id/tv_useremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email@nate.com"/>
    
            <TextView
        
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="카페고 로그인 환영해"/>
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:gravity="center_vertical"
        android:background="@color/colorMINT"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="  보안설정"/>
    
    <TextView
        android:background="@drawable/boarder"
        android:gravity="center_vertical"
        android:id="@+id/tv_changepw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="  계정 비밀번호 변경                                                                               >"/>
    
    <TextView
        android:gravity="center_vertical"
        android:background="@color/colorMINT"
        android:textSize="20dp"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="  계정정보"/>
    
    <TextView
        
        android:background="@drawable/boarder"
        android:gravity="center_vertical"
        android:id="@+id/tv_change_userinfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="  내 정보 관리(정보 수정)                                                                       >"/>
    
    <TextView
        
        android:background="@drawable/boarder"
        android:gravity="center_vertical"
        android:id="@+id/tv_delete_userinfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="  회원 탈퇴                                                                                               >"/>
    


</LinearLayout>

